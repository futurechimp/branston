<h2><%= @project.name %></h2>

<div id="actions">
	<ul>
		<li><%= link_to 'Back', projects_path %></li>
		<li><%= link_to 'Edit', edit_project_path(@project)%></li>
	</ul>
</div>

<p><%= @project.description %></p>

<h3>Iterations</h3>

<table class="index">
  <tr>
		<th>Name</th>
    <th>Velocity</th>  
    <th>Start date</th>
    <th>End date</th>
    <th>&nbsp;</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
  </tr>

<% @iterations.each do |iteration| %>
  <tr class="<%=cycle('odd','even')%>">
    <td><%= iteration.project.name %></td>
		<td><%= iteration.project.velocity %></td>
    <td><%=h iteration.start_date.strftime('%d/%m/%Y') unless iteration.start_date.nil? %></td>
    <td><%=h iteration.end_date.strftime('%d/%m/%Y') unless iteration.end_date.nil? %></td>
    <td class="action"><%=link_to 'Show', iteration_path(iteration) %></td>
    <td class="action"><%=link_to 'Stories', iteration_stories_path(iteration) %></td>
    <td class="action"><%= link_to 'Edit', edit_iteration_path(iteration) %></td>
    <td class="action"><%= link_to 'Destroy', iteration, :confirm => 'Are you sure you want to delete this iteration?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p><%= link_to 'New iteration', new_project_iteration_path(@project) %></p>