<%
  @page_title = "Projects"
%>

<div class="row heading">
  <div class="span9">
    <h1 class="muted"><%=h @page_title %></h1>
  </div>
  <div class="span3">
    <% if current_user.has_role?("admin") %>
      <% link_to new_project_path, :class => "btn btn-primary pull-right" do %>
        <i class="icon-plus icon-white"></i>
        Add project
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Project title</th>
      		<% if current_user.has_role?("admin") %>
            <th>Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% for project in @projects %>
        <tr>
          <td><%= link_to project.name, project, :title => project.description %></td>
          <% if current_user.has_role?("admin") %>
            <td class="actions">
              <%= link_to 'Edit', edit_project_path(project), :class => "btn btn-primary" %>
              <%= link_to'Destroy', project, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger" %>
            </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>