<% @page_title = "Log In" %>
<h2><%=h @page_title %></h2>

<% form_tag session_path do -%>
	<div class="form">
		<p>
			<%= label_tag 'login' %>
			<%= text_field_tag 'login', @login %>
		</p>

		<p>
			<%= label_tag 'password' %>
			<%= password_field_tag 'password', nil %>
		</p>

		<p>
			<%= label_tag 'remember_me', 'Remember me' %>
			<%= check_box_tag 'remember_me', '1', @remember_me %>
		</p>
	</div>
	<p>
		<%= submit_tag 'Log in' %>
	</p>
<% end -%>